{
  "name": "watch-pixiv-bookmarks",
  "version": "3.0.0",
  "description": "Monitor pixiv bookmarks and notify Discord when new items are added.",
  "homepage": "https://github.com/tomacheese/watch-pixiv-bookmarks",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-pixiv-bookmarks/issues"
  },
  "license": "MIT",
  "author": "Tomachi <tomachi@tomacheese.com>",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "url": "git@github.com:tomacheese/watch-pixiv-bookmarks.git",
    "type": "git"
  },
  "scripts": {
    "dev": "tsx watch ./src/main.ts",
    "fix": "run-z fix:prettier fix:eslint",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.8.77",
    "@book000/node-utils": "1.16.13",
    "@book000/pixivts": "0.35.37",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.27",
    "axios": "1.9.0",
    "eslint": "9.27.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "17.18.0",
    "eslint-plugin-promise": "7.2.1",
    "jest": "29.7.0",
    "jest-expect-message": "1.1.3",
    "prettier": "3.5.3",
    "run-z": "2.1.0",
    "ts-jest": "29.3.4",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
