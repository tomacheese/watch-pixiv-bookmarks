{
  "name": "watch-pixiv-bookmarks",
  "version": "3.0.0",
  "description": "Monitor pixiv bookmarks and notify Discord when new items are added.",
  "homepage": "https://github.com/tomacheese/watch-pixiv-bookmarks",
  "bugs": {
    "url": "https://github.com/tomacheese/watch-pixiv-bookmarks/issues"
  },
  "license": "MIT",
  "author": "Tomachi <tomachi@tomacheese.com>",
  "private": true,
  "main": "dist/main.js",
  "repository": {
    "url": "git@github.com:tomacheese/watch-pixiv-bookmarks.git",
    "type": "git"
  },
  "scripts": {
    "dev": "tsx watch ./src/main.ts",
    "fix": "run-z fix:prettier fix:eslint",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "preinstall": "npx only-allow pnpm",
    "start": "tsx ./src/main.ts",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.9.31",
    "@book000/node-utils": "1.18.86",
    "@book000/pixivts": "0.40.51",
    "@types/jest": "30.0.0",
    "@types/node": "22.16.5",
    "axios": "1.11.0",
    "eslint": "9.32.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.21.1",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.0.5",
    "jest-expect-message": "1.1.3",
    "prettier": "3.6.2",
    "run-z": "2.1.0",
    "ts-jest": "29.4.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
